@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Dashboard</title>
    <link rel="stylesheet" href="~/css/admin-user-style/admin.css">
    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="sidebar">
        <div class="sidebar-toggle">
            <span></span>
            <span></span>
            <span></span>
        </div>
        <nav class="menu">
            <ul>
                <li><a asp-controller="User" asp-action="Index">Home</a></li>
                <li><a asp-controller="User" asp-action="Profile">Profile</a></li>
                <li><a href="#">Passwords</a></li>
                <li><a href="#">Add/Edit Password</a></li>
                <li><a asp-controller="Login" asp-action="Logout" class="btn btn-red-exit">Exit</a></li>
            </ul>
        </nav>
    </div>
    <div class="content">
        @RenderBody()
    </div>
    @RenderSection("Scripts", required: false)
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const sidebarToggle = document.querySelector('.sidebar-toggle');
            const sidebar = document.querySelector('.sidebar');

            sidebarToggle.addEventListener('click', function () {
                sidebar.classList.toggle('closed');
                if (sidebar.classList.contains('closed')) {
                    sidebar.style.width = '60px';
                } else {
                    sidebar.style.width = '250px';
                }
            });
        });
    </script>
</body>
</html>
