<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Dashboard</title>
    <link rel="stylesheet" href="~/css/admin-user-style/admin.css">
</head>
<body>
    <div class="sidebar">
        <div class="sidebar-toggle">
            <span></span>
            <span></span>
            <span></span>
        </div>
        <nav class="menu">
            <ul>
                <li><a asp-controller="Admin" asp-action="Index">Home</a></li>
                <li><a href="#">Profile</a></li>
                <li><a href="#">Passwords</a></li>
                <li><a href="#">Add/Edit Password</a></li>
            </ul>
        </nav>
    </div>
    <div class="content">
        <header>
            <h1>User Dashboard</h1>
            <div class="user-info">
                <span>Welcome, User!</span>
            </div>
        </header>
        <main>
            <h2>Welcome to Your Dashboard!</h2>
            <p>This is your user dashboard where you can manage your profile and passwords.</p>
        </main>
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const sidebarToggle = document.querySelector('.sidebar-toggle');
            const sidebar = document.querySelector('.sidebar');

            sidebarToggle.addEventListener('click', function () {
                sidebar.classList.toggle('closed');
                if (sidebar.classList.contains('closed')) {
                    sidebar.style.width = '60px';
                } else {
                    sidebar.style.width = '250px';
                }
            });
        });
    </script>
</body>
</html>
