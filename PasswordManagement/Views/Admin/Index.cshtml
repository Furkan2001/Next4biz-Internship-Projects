@model PasswordManagementSystem.Models.User

@{
    var sessionUserId = ViewBag.AdminId; // ViewBag veya Model'den alınan dinamik değer
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="~/css/admin-user-style/admin.css" asp-append-version="true">
</head>
<body>
    <div class="sidebar">
        <div class="sidebar-toggle">
            <span></span>
            <span></span>
            <span></span>
        </div>
        <nav class="menu">
            <ul>
                <li><a asp-controller="Admin" asp-action="Index" asp-route-userId="@sessionUserId">Home</a></li>
                <li><a asp-controller="Admin" asp-action="Profile">Profile</a></li>
                <li><a href="#">Passwords</a></li>
                <li><a href="#">Add/Edit Password</a></li>
                <li><a asp-controller="Admin" asp-action="UserListing">Users</a></li>
                <li><a asp-controller="Admin" asp-action="AddUpdateUser">Add/Edit User</a></li>
                <li><a asp-controller="Admin" asp-action="RoleListing">Roles</a></li>
                <li><a asp-controller="Admin" asp-action="AddUpdateRole">Add/Edit Role</a></li>
                <li><a asp-controller="Admin" asp-action="CompanyLogs">Log</a></li>
            </ul>
        </nav>
    </div>
    <div class="content">
        <header>
            <h1>Admin Dashboard</h1>
            <div class="user-info">
                <span>@Model.Name</span>
            </div>
        </header>
        <main>
            <h2>Welcome, @Model.Name!</h2>
            <p>This is the home page of your admin dashboard.</p>
        </main>
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const sidebarToggle = document.querySelector('.sidebar-toggle');
            const sidebar = document.querySelector('.sidebar');

            sidebarToggle.addEventListener('click', function () {
                sidebar.classList.toggle('closed');
                if (sidebar.classList.contains('closed')) {
                    sidebar.style.width = '60px';
                } else {
                    sidebar.style.width = '250px';
                }
            });
        });
    </script>
</body>
</html>
